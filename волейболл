<script>
  let cart = [];

  function addToCart(item) {
    cart.push(item);
    renderCart();
    alert("–¢–æ–≤–∞—Ä –¥–æ–¥–∞–Ω–æ –≤ –∫–æ—à–∏–∫");
  }

  function renderCart() {
    const cartItems = document.getElementById("cartItems");
    cartItems.innerHTML = "";
    cart.forEach(product => {
      const div = document.createElement("div");
      div.className = "cart-item";
      div.textContent = "‚Ä¢ " + product;
      cartItems.appendChild(div);
    });
  }

  function sendOrder() {
    if (cart.length === 0) {
      alert("–ö–æ—à–∏–∫ –ø–æ—Ä–æ–∂–Ω—ñ–π");
      return;
    }
    alert("–ó–∞–º–æ–≤–ª–µ–Ω–Ω—è –ø—Ä–∏–π–Ω—è—Ç–æ! –ú–∏ –≤–∞–º –ø–µ—Ä–µ–¥–∑–≤–æ–Ω–∏–º–æ.");
    cart = [];
    renderCart();
  }
</script>

